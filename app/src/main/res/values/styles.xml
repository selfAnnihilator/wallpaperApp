<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>
    <style name="SearchSquircle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>
    <style name="WallpaperChip" parent="Widget.Material3.Chip.Filter">

        <item name="chipBackgroundColor">@color/chip_bg_selector</item>
        <item name="chipStrokeColor">@color/chip_stroke_selector</item>
        <item name="chipStrokeWidth">1.5dp</item>

        <item name="chipCornerRadius">18dp</item>
        <item name="chipMinHeight">36dp</item>

        <item name="android:textColor">@color/chip_text_selector</item>

        <!-- glow feel -->
        <item name="rippleColor">@color/chip_ripple</item>
        <item name="chipIconTint">@color/chip_icon_tint</item>

    </style>
</resources>