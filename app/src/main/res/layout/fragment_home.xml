<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/homeRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/black"

        android:paddingTop="32dp"

        android:focusableInTouchMode="true"
        android:clickable="true">

        <View
            android:id="@+id/focusHolder"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:focusable="true"
            android:focusableInTouchMode="true" />

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"

            android:background="@drawable/bg_search_clean"
            android:hint="Search wallpapers"

            android:textColor="#000"
            android:textColorHint="#777"
            android:textSize="15sp"

            android:paddingStart="20dp"
            android:paddingEnd="20dp"

            android:imeOptions="actionSearch"
            android:inputType="text"
            android:gravity="center_vertical"/>


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/categoryChips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="false"
                app:chipSpacingHorizontal="10dp">

                <!-- ALL FIRST -->
                <com.google.android.material.chip.Chip
                    style="@style/WallpaperChip"
                    android:id="@+id/chipNature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nature"
                    android:checkable="true"/>

                <com.google.android.material.chip.Chip
                    style="@style/WallpaperChip"
                    android:id="@+id/chipMinimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minimal"
                    android:checkable="true"/>

                <com.google.android.material.chip.Chip
                    style="@style/WallpaperChip"
                    android:id="@+id/chipAbstract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abstract"
                    android:checkable="true"/>

                <com.google.android.material.chip.Chip
                    style="@style/WallpaperChip"
                    android:id="@+id/chipAnime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anime"
                    android:checkable="true"/>

                <com.google.android.material.chip.Chip
                    style="@style/WallpaperChip"
                    android:id="@+id/chipDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dark"
                    android:checkable="true"/>

                <com.google.android.material.chip.Chip
                    style="@style/WallpaperChip"
                    android:id="@+id/chipTech"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tech"
                    android:checkable="true"/>

                <com.google.android.material.chip.Chip
                    style="@style/WallpaperChip"
                    android:id="@+id/chipSpace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Space"
                    android:checkable="true"/>

                <!-- NSFW LAST -->
                <com.google.android.material.chip.Chip
                    style="@style/WallpaperChip"
                    android:id="@+id/chipNSFW"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NSFW"
                    android:checkable="true"
                    android:textColor="#FF5252"/>

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/wallpaperRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="120dp"
            android:clipToPadding="false" />

    </LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
